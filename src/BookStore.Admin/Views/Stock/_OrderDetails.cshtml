@model StockImportOrderDto

<div class="container-fluid">
    <h5>Supplier: @Model.SupplierName</h5> <!-- Replace with actual supplier name -->
    <p>Import Date: @Model.ImportDate.ToString("yyyy-MM-dd")</p>
    <h6>Products</h6>
    <table class="table table-sm table-bordered">
        <thead>
            <tr>
                <th>Product ID</th>
                <th>Product Name</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Total Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Quantity</td>
                    <td>@product.UnitPrice.ToString("C")</td>
                    <td>@(product.Quantity * product.UnitPrice).ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
    <h5>Total Cost: @Model.TotalCost.ToString("C")</h5>
</div>
